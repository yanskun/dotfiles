[alias]
  b = branch
  bd = !git branch -d $(git b | peco)
  bD = !git branch -D $(git b | peco)
  s = status
  co = checkout
  cop = !git checkout $(git b | peco)
	tree = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"

[core]
  excludesfile = ~/.gitignore_global
  pager = less
  ignorecase = false
  editor = neovim
[pager]
	branch = cat
[pull]
	rebase = false
[ghq]
  root = ~/Projects
[init]
  defaultBranch = main
[push]
	autoSetupRemote = true
