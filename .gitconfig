[alias]
  b = branch
  s = status
  sw = switch
  swp = !"git switch $(git b --format='%(refname:short)' | fzf --reverse --height 50% --preview 'git show --color=always {}')"
  co = checkout
  cop = !"git switch $(git b --format='%(refname:short)' | fzf --reverse --height 50% --preview 'git show --color=always {}')"
	tree = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
  sync = !"git fetch -p && git branch --merged | grep -v '*' | grep -v 'main' | xargs git branch -d"

  lof = "!f() { \
    git log --oneline | \
    fzf --height 50% --reverse --preview 'a={}; git show --color=always ${(@)${=a}[1]}' | \
    awk -v arg=\"${@}\" '{ \
      if (arg == \"-w\" || arg == \"--web\") { \
        system(sprintf(\"gh browse %s\", $1)) \
      } else { \
        system(sprintf(\"git show --color=always %s\", $1)) \
        system(sprintf(\"gh repo view --json url --template '{{.url}}/commit/%s'\", $1)) \
        system(sprintf(\"echo\")) \
      } \
    }'; \
  }; f"
  bd =  "!f() { \
    git branch | \
    fzf --height 50% --reverse --preview 'git log --color=always --oneline $(echo {} | sed \"s/ //g\")' | \
    awk -v arg=\"${@}\" '{ \
      if (arg == \"-f\" || arg == \"--force\") { \
        system(sprintf(\"git branch -D %s\", $1)) \
      } else { \
        system(sprintf(\"git branch -d %s\", $1)) \
      } \
    }'; \
  }; f"

[core]
  excludesfile = ~/.gitignore_global
  pager = less
  ignorecase = false
  editor = neovim
[pager]
	branch = cat
[pull]
	rebase = false
[ghq]
  root = ~/Projects
  user = yanskun
[init]
  defaultBranch = main
[push]
	autoSetupRemote = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
